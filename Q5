
#include <stdio.h>

int fatorial(int a){
    int i, ret;
    ret = 1;

if(a>0)
{
	ret=fatorial(a-1)*a;
}

    return ret;
}

int main()
{
  int a, b, soma;  
  printf("Digite um numero inteiro: ");
  scanf("%d", &a); //recebe um inteiro e armazena na vari√°vel a

    printf("Fatorial de %d = %d \n\n", a, fatorial(a));
